<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/layout_customPharmaycy">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="263"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Gangnamcity Pharmacy"
                            android:singleLine="true"
                            android:textSize="17dp"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/phamList_englishName" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50m"
                            android:textColor="#7ca8e8"
                            android:textSize="17dp"
                            android:layout_gravity="right"
                            android:id="@+id/phamList_distance"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="1F, 416, Gangnam-daero, Gangnam-gu, Seoul, Korea hahahaha"
                        android:singleLine="true"
                        android:textColor="#9fa0a0"
                        android:textSize="12dp"
                        android:id="@+id/phamList_englishAddr" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="75"
                    android:layout_marginLeft="30dp"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/phamList_btnCall"
                        android:background="@drawable/call"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_id" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_dutyName" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"
            android:text="New Text"
            android:id="@+id/phamList_dutyTel1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_dutyTime1s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_dutyTime1c" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_postCdn1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_postCdn2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_longitude" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="168dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_foriegnLanguage1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:visibility="gone"
            android:id="@+id/phamList_latitude"
            android:layout_gravity="right" />
    </LinearLayout>

</LinearLayout>