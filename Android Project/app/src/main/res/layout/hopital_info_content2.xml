<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">


    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="10sp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hospital_info_name"
                        android:textSize="17dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="hospital_info_name"
                        android:textColor="#fd4c37" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:layout_gravity="right"
                        android:text="distance"
                        android:id="@+id/hospital_info_distance"
                        android:textColor="#7ca8e8" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="15sp">

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1F, 416, Gangnam-daero, Gangnam-gu, Seoul, Korea"
                    android:id="@+id/hospital_info_eng_address"
                    android:textSize="12dp"
                    android:textColor="#9fa0a0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="5sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울특별시 강남구 강남대로 416 1층"
                    android:id="@+id/hospital_info_kor_address"
                    android:textSize="12dp"
                    android:textColor="#9fa0a0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="15sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:text="phone"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:id="@+id/hospital_info_title_phone"
                        android:textColor="#9fa0a0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8.4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="wrap_content"
                            android:text="02-3462-3684"
                            android:id="@+id/hospital_info_phone"
                            android:textSize="12dp"
                            android:textColor="#9fa0a0" />
                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="#9fa0a0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8.4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="wrap_content"
                            android:text="02-3462-3684"
                            android:id="@+id/hospital_info_phone2"
                            android:textSize="12dp"
                            android:textColor="#9fa0a0" />
                    </LinearLayout>




                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:id="@+id/hospital_info_iBtn_phone"
                                android:background="@drawable/call"
                                android:onClick="onClick" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="contact"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/hospital_info_title_contact"
                                android:textSize="10dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>